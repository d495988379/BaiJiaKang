<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.nuogao.titlebar.widget.CommonTitleBar
        android:id="@+id/commonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="设置支付密码"
        app:centerTextColor="@color/white"
        app:centerTextSize="16sp"
        app:centerType="textView"
        app:leftImageResource="@mipmap/ic_back_img"
        app:leftType="imageButton"
        app:showBottomLine="false" />

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="15dp"
        app:hl_shadowColor="#10000000"
        app:hl_shadowLimit="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/oldRel"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旧密码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/loginPwdOldPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请输入旧密码"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:gravity="right"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textColor="#404040"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:id="@+id/oldView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/loginPwdNewPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请输入新密码"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:gravity="right"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textColor="#404040"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再次输入新密码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/loginPwdConfirmPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请再次输入新密码"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:gravity="right"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textColor="#404040"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </com.lihang.ShadowLayout>


    <Button
        android:id="@+id/setLoginPwdBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/shape_btn_bg"
        android:layout_marginTop="35dp"
        android:text="确定"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</LinearLayout>