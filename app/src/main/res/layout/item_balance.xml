<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="10dp"
        app:hl_shadowColor="#10000000"
        app:hl_shadowLimit="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemAgentImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_default_head" />

            <TextView
                android:id="@+id/itemBalanceMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00"
                android:textSize="15sp"
                android:textColor="#F7282F"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/itemAgentImg"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/itemBalanceMoney">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemBalanceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周超"
                        android:textColor="#404040"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/itemBalanceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户余额消费"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/itemBalanceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-10-10 14:00:00"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>


        </RelativeLayout>

    </com.lihang.ShadowLayout>

</LinearLayout>