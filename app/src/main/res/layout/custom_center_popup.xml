<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_popup_bg">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@mipmap/ic_jy_popup_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确认油站信息"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/popupNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/popupTv1"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:background="@drawable/shape_popup_btn_bk"
            android:text="我在想下"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginRight="7.5dp"/>

        <TextView
            android:id="@+id/popupTv2"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:background="@drawable/shape_popup_btn_bg"
            android:text="确认加油"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="7.5dp"/>

    </LinearLayout>

</LinearLayout>