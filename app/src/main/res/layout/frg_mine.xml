<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color">

    <View
        android:id="@+id/mineStateBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/main_color" />

    <com.zlxn.dl.baijiakang.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mineHead"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:src="@mipmap/ic_default_head"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/mineHead"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mineName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="用户姓名" />

                        <ImageView
                            android:id="@+id/mineSf"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/minePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mineHead"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mineLq"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/timeView1"
                            android:layout_width="1dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="invisible"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/yxqQuanTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效期:2020-12-10"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mineJf"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="90dp"/>
                        <View
                            android:id="@+id/timeView2"
                            android:layout_width="1dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:visibility="invisible"
                            android:layout_marginRight="15dp"/>

                        <TextView
                            android:id="@+id/yxqJfTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效期:2020-12-10"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="invisible"/>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_bd_img"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mineModule1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_mine_center_img1"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="加油订单"
                        android:textColor="#404040"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mineModule2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_mine_center_img2"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="商城订单"
                        android:textColor="#404040"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_mine_center_img3"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="心选订单"
                        android:textColor="#404040"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mineModule4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_mine_center_img4"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="代理管理"
                        android:textColor="#404040"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/rechargeImg"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="18dp"
                    android:src="@mipmap/ic_mine_cz_img" />

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="3dp"
                    app:hl_cornerRadius="12dp"
                    app:hl_shadowColor="#10000000"
                    app:hl_shadowLimit="5dp"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical"
                        android:paddingVertical="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img1"
                                android:drawablePadding="10dp"
                                android:text="新手教程"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img2"
                                android:drawablePadding="10dp"
                                android:text="商业合作"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bottomRel3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img3"
                                android:drawablePadding="10dp"
                                android:text="邀请码"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img4"
                                android:drawablePadding="10dp"
                                android:text="关于我们"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bottomRel5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img6"
                                android:drawablePadding="10dp"
                                android:text="设置"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bottomRel6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img7"
                                android:drawablePadding="10dp"
                                android:text="我的余额"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bottomRel8"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_address"
                                android:drawablePadding="10dp"
                                android:text="收货地址"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bottomRel7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:drawableLeft="@mipmap/ic_mine_img5"
                                android:drawablePadding="10dp"
                                android:text="退出登录"
                                android:textColor="#040404"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/ic_mine_right_arrow" />

                        </RelativeLayout>

                    </LinearLayout>

                </com.lihang.ShadowLayout>


            </LinearLayout>

        </LinearLayout>

    </com.zlxn.dl.baijiakang.view.MyScrollView>

</LinearLayout>