<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/shape_jy_bg"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yhOrderState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:text="未支付"
                android:textColor="#888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/itemJyName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="壳牌加油站"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/yhOrderState"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/itemJyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加油单号：124124"
            android:textSize="13sp"
            android:textColor="#444444"/>

        <TextView
            android:id="@+id/itemJyYq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="油枪：124124"
            android:textSize="13sp"
            android:textColor="#444444"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/itemJyYp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="油品：124124"
            android:textSize="13sp"
            android:textColor="#444444"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/itemJyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升数：34.78"
            android:textSize="13sp"
            android:textColor="#444444"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/itemJyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-09-15 20:00:00"
            android:textSize="12sp"
            android:textColor="#b2b2b2"
            android:layout_marginTop="5dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/itemJyMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 200.00"
            android:textColor="#D7433A"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:gravity="right|center_vertical"/>

        <TextView
            android:id="@+id/itemJyYh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠价20.00"
            android:textSize="13sp"
            android:textColor="#878787"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"/>

    </LinearLayout>


</RelativeLayout>