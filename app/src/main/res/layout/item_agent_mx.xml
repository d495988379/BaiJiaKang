<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="15dp"
        app:hl_shadowColor="#10000000"
        app:hl_shadowLimit="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/itemAgentImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_head_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/itemAgentImg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemAgentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周超"
                        android:textColor="#404040"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemAgentMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.00"
                        android:textSize="15sp"
                        android:textColor="#F7282F"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/itemAgentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-10-10 14:00:00"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="13dp"/>

            </LinearLayout>

        </RelativeLayout>

    </com.lihang.ShadowLayout>

</LinearLayout>