<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nuogao.titlebar.widget.CommonTitleBar
        android:id="@+id/commonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="完善信息"
        app:centerTextColor="@color/white"
        app:centerTextSize="16sp"
        app:centerType="textView"
        app:leftImageResource="@mipmap/ic_back_img"
        app:leftType="imageButton"
        app:showBottomLine="false" />


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="15dp"
        app:hl_shadowColor="#10000000"
        app:hl_shadowLimit="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:gravity="right"
                    android:textColor="#404040"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请输入密码"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:gravity="right"
                    android:textColor="#404040"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请输入邀请码"
                    android:textSize="14sp"
                    android:textColorHint="#888888"
                    android:gravity="right"
                    android:textColor="#404040"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入图形验证码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textColorHint="#888888"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:id="@+id/informationImg"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入短信验证码"
                    android:layout_centerVertical="true"
                    android:textColor="#404040"
                    android:textColorHint="#888888"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/shape_yzm_btn_bg"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDEDE"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </com.lihang.ShadowLayout>

    <Button
        android:id="@+id/informationBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/shape_btn_bg"
        android:layout_marginTop="35dp"
        android:text="确定"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</LinearLayout>